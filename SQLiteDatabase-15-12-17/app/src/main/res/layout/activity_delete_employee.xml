<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahsanhabib.sqlitedatabase_15_12_17.DeleteEmployee">

    <TextView
        android:id="@+id/Delete Employee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Delete an Employee"
        android:textAlignment="center"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/etId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/Delete Employee"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnDeleteEmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Employee"
        android:textSize="30sp"
        android:layout_below="@+id/etId"
        android:layout_alignParentStart="true"
        android:layout_marginTop="140dp" />
</RelativeLayout>

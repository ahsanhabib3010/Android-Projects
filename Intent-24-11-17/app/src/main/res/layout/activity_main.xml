<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_3"
    tools:context="com.example.ahsanhabib.intent_24_11_17.MainActivity">


    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:onClick="onHomeButtonClick"
        android:text="Home"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnHome"
        android:layout_marginTop="17dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="onAboutButtonClick"
        android:text="About"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAbout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="onProductButtonClick"
        android:text="Products"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@android:color/holo_blue_light"
        android:onClick="onServicesButtonClick"
        android:text="Services"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnServices"
        android:layout_marginTop="15dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="onGalleryButtonClick"
        android:text="Gallery"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="onContactButtonClick"
        android:text="Contact Us"
        android:textSize="24sp"
        android:layout_below="@+id/btnGallery"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
